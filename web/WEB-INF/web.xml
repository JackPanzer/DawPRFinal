<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>SrvUsuario</servlet-name>
        <servlet-class>daw.prfinal.controlador.SrvUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SrvArticulo</servlet-name>
        <servlet-class>daw.prfinal.controlador.SrvArticulo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SrvRol</servlet-name>
        <servlet-class>daw.prfinal.controlador.SrvRol</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SrvCategoria</servlet-name>
        <servlet-class>daw.prfinal.controlador.SrvCategoria</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SrvVotacion</servlet-name>
        <servlet-class>daw.prfinal.controlador.SrvVotacion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>SrvUsuario</servlet-name>
        <url-pattern>/SrvUsuario</url-pattern>
        <url-pattern>/SrvUsuario/Registrar</url-pattern>
        <url-pattern>/SrvUsuario/Login</url-pattern>
        <url-pattern>/SrvUsuario/Logout</url-pattern>
        <url-pattern>/SrvUsuario/CrearUsuario</url-pattern>
        <url-pattern>/SrvUsuario/VerPerfil</url-pattern>
        <url-pattern>/SrvUsuario/ComprobarNick</url-pattern>
        <url-pattern>/SrvUsuario/ComprobarCorreo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SrvArticulo</servlet-name>
        <url-pattern>/SrvArticulo</url-pattern>
        <url-pattern>/SrvArticulo/VerFichaArticulo</url-pattern>
        <url-pattern>/SrvArticulo/VerFavs</url-pattern>
        <url-pattern>/SrvArticulo/Recientes</url-pattern>
        <url-pattern>/SrvArticulo/VerArticulos</url-pattern>
        <url-pattern>/SrvArticulo/FormNuevoArticulo</url-pattern>
        <url-pattern>/SrvArticulo/RegistrarArticulo</url-pattern>
        <url-pattern>/SrvArticulo/VerProducto</url-pattern>
        <url-pattern>/SrvArticulo/ObtenerFavs</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SrvRol</servlet-name>
        <url-pattern>/SrvRol</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SrvCategoria</servlet-name>
        <url-pattern>/SrvCategoria</url-pattern>
        <url-pattern>/SrvCategoria/ObtenerCategorias</url-pattern>
        <url-pattern>/SrvCategoria/ComboCategorias</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SrvVotacion</servlet-name>
        <url-pattern>/SrvVotacion</url-pattern>
        <url-pattern>/SrvVotacion/VotarUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
